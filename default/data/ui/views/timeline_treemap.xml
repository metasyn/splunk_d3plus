<form script="autodiscover.js">
    <label>Timeline Treemap</label>
    <row>
      <panel>
        <html>
          <h2>Description</h2>
          <p id="info"></p>
          <div id="timeline_treemap_search" class="splunk-manager" data-require="splunkjs/mvc/searchmanager" data-options='{
 	         "search": "index=_internal earliest=-5d 
| bucket _time span=1h 
| stats avg(bytes) as value, avg(spent) as weight, max(bytes) as color by display_page_search_tab clientip file _time",
    	     "preview": true
          }'>
          </div>
          <div id="grouped_treemap" 
          class="splunk-view" 
          data-require="app/d3plus/components/treemap/treemap" 
          data-options='{
		"managerid": "timeline_treemap_search",
		"height": "800",
		"width": "1000", 
		"levels": ["file"],
		"size_field": "weight",
		"time_field": "_time"
          }'>
          	<div>
              <h1> Padding </h1>
            </div>
          </div>
        </html>
      </panel>
    </row>
  </form>